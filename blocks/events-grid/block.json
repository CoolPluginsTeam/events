{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "evt/events-grid",
	"version": "1.0.0",
	"title": "Events Grid",
	"category": "widgets",
	"icon": "grid-view",
	"description": "Display multiple events in a responsive grid layout.",
	"keywords": ["event", "calendar", "grid"],
	"textdomain": "events",
	"attributes": {
		"columns": {
			"type": "number",
			"default": 2
		}
	},
	"providesContext": {},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"editorScript": "evt-events-blocks",
	"editorStyle": "evt-events-editor",
	"style": "evt-events-style"
}
